<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height ="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_weight="0.08">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A flag with red, white, blue and yellow colors"
                android:id="@+id/textView"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malaysian flag"
                android:id="@+id/radioButton"
                android:checked="true" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USA flag"
                android:id="@+id/radioButton2"
                android:checked="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The flag has also a crescent and star with "
                android:id="@+id/textView2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 Points Star"
                    android:id="@+id/checkBox"
                    android:checked="false" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Points Star"
                    android:id="@+id/checkBox2"
                    android:checked="false" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 Points Star"
                    android:id="@+id/checkBox3"
                    android:checked="true" />
            </LinearLayout>
        </RadioGroup>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:id="@+id/imageView"
            android:src="@drawable/malaysianflag"/>
    </LinearLayout>

</RelativeLayout>