<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billEditText"
        android:layout_marginStart="55dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/textView8"
        android:text="20%"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="29dp"
        android:text="Bill Total"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:text="Discount"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:text="Total"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="29dp"
        android:text="Custom"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="29dp"
        android:text="Custom"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_marginStart="35dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/discountCustomEditText"
        android:text="Total"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="25dp"
        android:text="10%"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billEditText"
        android:layout_marginStart="52dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/textView7"
        android:text="15%"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/billEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/discount10EditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/textView14"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/total10EditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discount10EditText"
        android:layout_marginStart="44dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/textView15"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/discountCustomEditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customSeekBar"
        android:layout_marginStart="5dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/textView18"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/totalCustomEditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customSeekBar"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/textView19"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/total15EditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discount10EditText"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/total10EditText"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/total20EditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discount10EditText"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/total15EditText"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/discount15EditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/discount10EditText"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/discount20EditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/discount15EditText"
        android:ems="10"
        android:inputType="textPersonName" />

    <SeekBar
        android:id="@+id/customSeekBar"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total20EditText"
        android:layout_marginStart="6dp"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/textView16" />

    <TextView
        android:id="@+id/customDiscountTextView"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total20EditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="14dp"
        android:textSize="10pt" />
</RelativeLayout>

